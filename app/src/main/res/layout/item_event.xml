<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="?attr/eventItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivEventImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="?attr/eventItemTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivEventImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ivEventImage"
            app:layout_constraintTop_toBottomOf="@+id/ivEventImage" />

        <TextView
            android:id="@+id/tvEventOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/textFillColor"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/ivEventImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ivEventImage"
            app:layout_constraintTop_toBottomOf="@+id/tvEventTitle" />

        <TextView
            android:id="@+id/tvEventCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/eventItemTextColorSecondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/ivEventImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ivEventImage"
            app:layout_constraintTop_toBottomOf="@+id/tvEventOwner" />

        <TextView
            android:id="@+id/tvEventQuota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/eventItemTextColorSecondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/ivEventImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ivEventImage"
            app:layout_constraintTop_toBottomOf="@+id/tvEventCity" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
